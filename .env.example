# Flask Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Application Secret Keys
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
# For MySQL/MariaDB with XAMPP (default setup)
DATABASE_URL=mysql+pymysql://root:@localhost:3306/fuji?charset=utf8mb4

# Or for production with dedicated database user:
# DATABASE_URL=mysql+pymysql://fuji_user:password@localhost:3306/fuji?charset=utf8mb4

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600

# Rate Limiting (optional)
# For Redis-based rate limiting (uncomment if using Redis):
# REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Email Configuration (if implementing email features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password